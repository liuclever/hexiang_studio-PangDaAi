/**
 * 何湘技能大师工作室小程序全局样式
 */
@import "./miniprogram_npm/tdesign-miniprogram/common/style/index.wxss";

page {
  --td-brand-color: #1890FF;
  --td-brand-color-light: #4dabff;
  --td-brand-color-dark: #0065b3;
  --td-warning-color: #ff9800;
  --td-error-color: #f44336;
  --td-success-color: #4caf50;

  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Microsoft YaHei', Arial, sans-serif;
}

/* 页面全局样式 */
page {
  background-color: var(--bg-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  font-size: var(--font-size-normal);
  color: var(--text-main);
  line-height: 1.5;
}

/* 容器通用样式 */
.container {
  padding: var(--space-medium);
  box-sizing: border-box;
}

/* 卡片通用样式 */
.card {
  background-color: var(--card-bg-color);
  border-radius: var(--border-radius);
  box-shadow: var(--box-shadow);
  margin-bottom: var(--space-medium);
  padding: var(--space-normal);
  overflow: hidden;
}

/* 标题通用样式 */
.title {
  font-size: var(--font-size-medium);
  font-weight: 500;
  color: var(--text-main);
  margin-bottom: var(--space-normal);
}

/* 描述文本 */
.description {
  font-size: var(--font-size-normal);
  color: var(--text-secondary);
  margin-bottom: var(--space-small);
}

/* 通用布局 */
.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-around {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

/* 文本省略号 */
.ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 头像 */
.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: #f0f0f0;
}

/* 按钮样式 */
.btn-primary {
  background-color: var(--primary-color);
  color: var(--text-white);
  border: none;
  border-radius: var(--border-radius);
}

.btn-outline {
  background-color: transparent;
  color: var(--primary-color);
  border: 1px solid var(--primary-color);
  border-radius: var(--border-radius);
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 0 6px;
  height: 22px;
  line-height: 22px;
  font-size: var(--font-size-small);
  border-radius: 2px;
}

.tag-primary {
  background-color: rgba(24, 144, 255, 0.1);
  color: var(--primary-color);
}

.tag-success {
  background-color: rgba(82, 196, 26, 0.1);
  color: var(--success-color);
}

.tag-warning {
  background-color: rgba(250, 173, 20, 0.1);
  color: var(--warning-color);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: var(--space-large) 0;
  color: var(--text-secondary);
}

/* 分割线 */
.divider {
  height: 1px;
  background-color: var(--border-light);
  margin: var(--space-normal) 0;
}

/* 加载动画 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 100%;
}

/* 网格布局 */
.grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--space-normal);
  padding: var(--space-normal) 0;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.grid-icon {
  width: 40px;
  height: 40px;
  margin-bottom: var(--space-small);
}

.grid-text {
  font-size: var(--font-size-small);
  color: var(--text-regular);
}

/* 底部安全区域 */
.safe-bottom {
  padding-bottom: env(safe-area-inset-bottom);
} 