/* pages/course/detail.wxss */

/* 课程详情页样式 - 基于任务详情页面设计风格 */
.container {
  min-height: 100vh;
  background-color: #f5f5f7;
  padding-bottom: 110rpx;
  box-sizing: border-box;
  padding-top: 92rpx; /* 为固定导航栏留出空间 */
}

/* 自定义导航栏 */
.custom-navbar {
  z-index: 100;
  width: 100%;
  color: #333;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.03);
}

.navbar-back-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 16rpx;
  height: 100%;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 400rpx;
}

/* 内容滚动区域 */
.detail-scroll {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  padding: 16rpx;
}

/* 卡片通用样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

/* 课程主卡片样式 */
.course-main-card {
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.section-card {
  margin-bottom: 20rpx;
  padding: 0rpx;
}

/* 课程头部信息 */
.course-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  gap: 20rpx;
}

.course-cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  background-color: #f5f5f7;
}

.course-header-info {
  flex: 1;
  min-width: 0;
}

.course-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  word-break: break-all;
  line-height: 1.4;
}

.course-instructor {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

/* 信息网格 */
.info-grid {
  display: flex;
  justify-content: space-between;
  margin: 24rpx 0;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item {
  flex: 1;
  text-align: center;
}

.info-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 课程状态样式 */
.status-ongoing {
  color: #0052d9 !important;
}

.status-completed {
  color: #00a870 !important;
}

.status-upcoming {
  color: #ff7d00 !important;
}

/* 课程时间信息 */
.course-period {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background-color: rgba(0, 82, 217, 0.05);
  border-radius: 12rpx;
  margin-top: 24rpx;
}

.period-info {
  flex: 1;
}

.period-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.period-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #0052d9;
}

/* section 标题样式 */
.cell-title {
  font-size: 30rpx !important;
  font-weight: 600 !important;
  color: #1a1a1a !important;
}

/* section 内容 */
.section-content {
  padding: 0rpx 24rpx 20rpx 24rpx;
}

/* 网格信息布局样式 */
.info-grid-layout {
  margin-top: 12rpx;
}

.info-grid-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.info-grid-row:last-child {
  margin-bottom: 0;
}

.info-item-grid {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  flex: 1;
  min-width: 0;
}

.info-content-grid {
  flex: 1;
  min-width: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  font-weight: 600;
}

.info-text {
  font-size: 26rpx;
  color: #333;
  word-break: break-all;
  line-height: 1.4;
}

/* 课程描述 */
.course-description {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.6;
  word-break: break-all;
}

/* 空状态和加载状态 */
.empty-content {
  padding: 40rpx 0;
}

.loading-mini {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

/* 学生网格样式 */
.students-grid {
  margin-top: 12rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.student-card {
  flex: 0 0 calc(29% - 4rpx);
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 16rpx 12rpx;
  border: 1rpx solid #e9ecef;
  transition: all 0.2s ease;
}

.student-card:active {
  background-color: #e9ecef;
  transform: scale(0.98);
}

.student-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.student-class {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
  word-break: break-all;
}

/* 课程资料样式 */
.materials-list {
  margin-top: 12rpx;
}

.material-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.file-type-icon {
  color: #0052d9;
}

.material-actions {
  display: flex;
  gap: 12rpx;
}

.action-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8rpx;
  border-radius: 8rpx;
  min-width: 80rpx;
  background: none;
  border: none;
  line-height: normal;
  margin: 0;
  font-size: inherit;
}

.action-button::after {
  border: none;
}

.preview-button {
  background-color: rgba(0, 82, 217, 0.1);
}

.download-button {
  background-color: rgba(7, 193, 96, 0.1);
}

.action-icon {
  margin-bottom: 4rpx;
}

.action-text {
  font-size: 22rpx;
  line-height: 1;
}

.preview-icon {
  color: #0052d9;
}

.download-icon {
  color: #07c160;
}

/* 添加按钮交互效果 */
.action-button:active {
  opacity: 0.7 !important;
}

/* 错误状态 */
.error-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 400rpx;
  padding: 40rpx;
}