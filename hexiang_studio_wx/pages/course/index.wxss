/* pages/course/index.wxss */
page {
  background-color: #f5f5f7;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 24rpx 24rpx 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  background-color: #ffffff;
  padding: 30rpx 30rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  border-radius: 0 0 20rpx 20rpx;
  margin-bottom: 24rpx;
}

.header-content {
  display: flex;
  align-items: center;
}

.header-icon {
  width: 64rpx;
  height: 64rpx;
  background-color: #e8f4fd;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  border: 2rpx solid #d4edda;
}

.header-text {
  flex: 1;
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 4rpx;
  letter-spacing: 0.5rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* 选项卡 */
.tab-container {
  display: flex;
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  position: relative;
  transition: all 0.3s ease;
}

.tab:active {
  background-color: #f8f9fa;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  transition: color 0.3s ease;
}

.tab-active .tab-text {
  color: #0052d9;
  font-weight: 600;
}

.tab-line {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #0052d9;
  border-radius: 2rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #0052d9;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 3rpx;
  margin-bottom: 12rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* 课程列表 */
.course-list {
  padding-bottom: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-icon {
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #ccc;
  line-height: 1.4;
}

/* 课程列表项 */
.course-item {
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.course-content {
  padding: 30rpx;
  display: flex;
}

.course-cover {
  width: 160rpx;
  height: 120rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.course-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.course-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 12rpx;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.course-meta {
  margin-bottom: 12rpx;
}

.meta-row {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
}

.meta-row:last-child {
  margin-bottom: 0;
}

.meta-label {
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
  min-width: 60rpx;
  margin-right: 8rpx;
}

.meta-value {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
  flex: 1;
}

.course-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-top: auto;
}

/* 课程操作区域 */
.course-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #f8f9fa;
  border-top: 1rpx solid #eee;
}

.status-info {
  display: flex;
  align-items: center;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
}

.status-badge.status-0 {
  background-color: #f5f5f5;
  color: #666;
}

.status-badge.status-1 {
  background-color: #e8f5e8;
  color: #52c41a;
}

.status-badge.status-2 {
  background-color: #fff2e8;
  color: #fa8c16;
}

.status-text {
  font-size: 22rpx;
  font-weight: 600;
}

.student-count {
  font-size: 24rpx;
  color: #666;
}

.action-buttons {
  display: flex;
  align-items: center;
}

/* 底部加载 */
.bottom-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

/* 没有更多 */
.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.no-more-text {
  font-size: 26rpx;
  color: #999;
  position: relative;
}

.no-more-text::before,
.no-more-text::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 100rpx;
  height: 1rpx;
  background-color: #e0e0e0;
}

.no-more-text::before {
  right: 100%;
  margin-right: 20rpx;
}

.no-more-text::after {
  left: 100%;
  margin-left: 20rpx;
} 