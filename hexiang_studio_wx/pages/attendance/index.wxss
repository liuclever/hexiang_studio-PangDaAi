/* pages/attendance/index.wxss */
page {
  background-color: #f5f5f7;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 0 0 30rpx 0;
  width: 100%;
  box-sizing: border-box;
}

/* 顶部导航区域 */
.header {
  background-color: #ffffff;
  padding: 30rpx 30rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  position: sticky;
  top: 0;
  z-index: 10;
  border-radius: 0 0 20rpx 20rpx;
}

.title-area {
  text-align: center;
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a1a;
  letter-spacing: 0.5rpx;
  display: block;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 26rpx;
  color: #666;
  font-weight: 400;
}

/* 统计卡片 */
.stats-card {
  background-color: #ffffff;
  margin: 24rpx 16rpx;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.stats-item {
  flex: 1;
  text-align: center;
}

.stats-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #0052d9;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

.stats-divider {
  width: 2rpx;
  height: 60rpx;
  background-color: #f0f0f0;
  margin: 0 20rpx;
}

/* 快速签到卡片 */
.quick-sign-card {
  background-color: #0052d9;
  margin: 0 16rpx 24rpx;
  border-radius: 12rpx;
  padding: 24rpx;
  color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 82, 217, 0.15);
}

.quick-sign-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.quick-sign-title {
  display: flex;
  align-items: center;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  margin-right: 16rpx;
}

.type-tag {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  background-color: rgba(255, 255, 255, 0.2);
}

.quick-sign-time {
  font-size: 24rpx;
  opacity: 0.9;
}

.quick-sign-body {
  margin-bottom: 20rpx;
}

.plan-name {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.plan-location {
  font-size: 24rpx;
  opacity: 0.8;
}

.quick-sign-footer {
  display: flex;
  justify-content: flex-end;
}

.quick-sign-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 32rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.quick-sign-btn:active {
  background-color: rgba(255, 255, 255, 0.3);
}

/* 分组标题 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin: 32rpx 16rpx 20rpx;
  padding-left: 8rpx;
  position: relative;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 24rpx;
  background-color: #0052d9;
  border-radius: 3rpx;
}

/* 考勤模块卡片 */
.attendance-modules {
  margin: 0 16rpx;
}

.module-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.card-hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.module-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.module-icon.duty {
  background-color: #fff2f0;
  border: 2rpx solid #ffccc7;
  color: #ff4d4f;
}

.module-icon.activity {
  background-color: #f6ffed;
  border: 2rpx solid #b7eb8f;
  color: #52c41a;
}

.module-icon.course {
  background-color: #e6f7ff;
  border: 2rpx solid #91d5ff;
  color: #1890ff;
}

/* TDesign图标 */

.module-info {
  flex: 1;
}

.module-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 6rpx;
}

.module-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.module-count {
  font-size: 22rpx;
  color: #0052d9;
  font-weight: 500;
}

.module-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.4;
}

/* 箭头使用TDesign图标 */

/* 功能网格 */
.function-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin: 0 20rpx;
}

.function-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 36rpx 20rpx 28rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  min-height: 120rpx;
}

.item-hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.function-icon {
  width: 72rpx;
  height: 72rpx;
  margin: 0 auto 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f9fa;
  border: 2rpx solid #e3e6ea;
  border-radius: 16rpx;
  color: #0052d9;
}

/* 功能图标使用TDesign */

.function-name {
  font-size: 26rpx;
  color: #1a1a1a;
  font-weight: 600;
  line-height: 1.2;
}

/* ==================== 请假申请弹窗样式 ==================== */
.leave-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.leave-modal {
  background-color: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  width: 100%;
  max-height: 80vh;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.modal-close {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
}

.modal-content {
  padding: 0 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.form-label .required {
  color: #ff4757;
  margin-left: 4rpx;
}

.form-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  line-height: 1.4;
}

.form-tip.time-duration {
  color: #1890ff;
  font-weight: 500;
}

.optional {
  color: #999;
  font-weight: 400;
  font-size: 24rpx;
}

.picker-display {
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 24rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-text.placeholder {
  color: #999;
}

.picker-text:empty::before {
  content: attr(placeholder);
  color: #999;
}

/* 禁用状态的选择器样式 */
.picker-display[disabled] {
  background-color: #f5f5f5;
  border-color: #e0e0e0;
  color: #999;
  cursor: not-allowed;
}

.picker-display[disabled] .picker-text {
  color: #666;
}

.reason-input {
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  min-height: 120rpx;
  width: 100%;
  box-sizing: border-box;
}

.char-count {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 8rpx;
}

/* 文件上传区域 */
.upload-area {
  margin-top: 16rpx;
}

.uploaded-files {
  margin-bottom: 16rpx;
}

.file-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
}

.file-item:last-child {
  margin-bottom: 0;
}

.file-info {
  display: flex;
  align-items: center;
  flex: 1;
  gap: 16rpx;
}

.file-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.file-icon.file-image {
  background-color: #e6f7ff;
  color: #1890ff;
}

.file-icon.file-pdf {
  background-color: #fff2f0;
  color: #ff4d4f;
}

.file-icon.file-word {
  background-color: #f6ffed;
  color: #52c41a;
}

.file-icon.file-excel {
  background-color: #fff7e6;
  color: #fa8c16;
}

.file-icon.file-archive {
  background-color: #f9f0ff;
  color: #722ed1;
}

.file-icon.file-other {
  background-color: #f5f5f5;
  color: #666;
}

.file-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.file-size {
  font-size: 24rpx;
  color: #999;
}

.file-remove {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #fff;
  border: 2rpx solid #e9ecef;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.upload-btn {
  background-color: #f8f9fa;
  border: 2rpx dashed #d9d9d9;
  border-radius: 12rpx;
  padding: 32rpx 20rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #0052d9;
  font-weight: 500;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
}

.modal-footer {
  padding: 24rpx 32rpx 40rpx;
  display: flex;
  gap: 24rpx;
}

.cancel-btn {
  flex: 1;
  background-color: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.cancel-btn::after {
  border: none;
}

.submit-btn {
  flex: 2;
  background-color: #0052d9;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.submit-btn::after {
  border: none;
}

.submit-btn[disabled] {
  background-color: #ccc;
  color: #999;
}

/* 请假记录样式 */
.leave-records-section {
  margin: 20rpx 16rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.leave-records-list {
  padding: 0;
}

.leave-record-item {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
}

.leave-record-item:last-child {
  border-bottom: none;
}

.leave-record-item:hover {
  background-color: #f8f9fa;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.record-type {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.record-status {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-pending {
  background-color: #fff7e6;
  color: #d46b08;
}

.status-approved {
  background-color: #f6ffed;
  color: #52c41a;
}

.status-rejected {
  background-color: #fff2f0;
  color: #ff4d4f;
}

.record-plan {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.plan-label {
  color: #999;
  margin-right: 8rpx;
}

.plan-name {
  color: #0052d9;
  font-weight: 500;
}

.record-time {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.record-reason {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-date {
  font-size: 24rpx;
  color: #999;
}

.empty-state, .loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 30rpx;
}

.empty-text, .loading-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 16rpx;
} 

/* 请假类型标签样式 */
.record-type {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
}

/* 不同请假类型的颜色 */
.record-type.type-personal_leave {
  background-color: #0052d9; /* 蓝色 - 事假 */
}

.record-type.type-sick_leave {
  background-color: #ff6900; /* 橙色 - 病假 */
}

.record-type.type-public_leave {
  background-color: #00a870; /* 绿色 - 公假 */
}

.record-type:not(.type-personal_leave):not(.type-sick_leave):not(.type-public_leave) {
  background-color: #666; /* 灰色 - 其他类型 */
} 