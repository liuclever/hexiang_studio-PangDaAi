/* pages/attendance/course/index.wxss */
page {
  background-color: #f5f5f7;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 0 0 30rpx 0;
  width: 100%;
  box-sizing: border-box;
}

/* 页面头部样式 */
.header {
  background-color: #ffffff;
  padding: 30rpx 30rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  position: sticky;
  top: 0;
  z-index: 10;
  border-radius: 0 0 20rpx 20rpx;
}

.title-area {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  margin-bottom: 28rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a1a;
  letter-spacing: 0.5rpx;
  text-align: center;
}

/* 筛选区域 */
.filter-bar {
  margin: 10rpx 0 20rpx;
}

.filter-chips {
  display: flex;
  flex-wrap: nowrap;
  overflow-x: auto;
  scrollbar-width: none;
  -ms-overflow-style: none;
  padding-bottom: 10rpx;
}

.filter-chips::-webkit-scrollbar {
  display: none;
}

.chip {
  display: inline-flex;
  align-items: center;
  padding: 14rpx 32rpx;
  margin-right: 20rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  background-color: #f5f5f7;
  color: #666;
  white-space: nowrap;
  border: 2rpx solid transparent;
  font-weight: 500;
}

.chip:active {
  opacity: 0.7;
}

.chip.active {
  background-color: #0052d9;
  color: #ffffff;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 82, 217, 0.3);
}

/* 操作栏 */
.action-bar {
  margin-top: 16rpx;
}

.create-btn {
  background-color: #52c41a;
  color: #ffffff;
  border-radius: 24rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.2);
  border: none;
}

.create-btn t-icon {
  margin-right: 12rpx;
}

.create-btn:active {
  opacity: 0.8;
}

/* 课程列表 */
.course-list {
  margin: 24rpx 16rpx 0;
}

.empty-state {
  text-align: center;
  padding: 120rpx 0;
  color: #999;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 课程卡片 */
.course-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  transition: all 0.3s ease;
}

.course-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.course-card-content {
  padding: 24rpx;
}

.course-header {
  margin-bottom: 20rpx;
}

.course-title-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.course-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  flex: 1;
  margin-right: 16rpx;
  line-height: 1.4;
}

.status-indicator {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  white-space: nowrap;
}

.status-indicator.ongoing {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.status-indicator.upcoming {
  background-color: #e6f7ff;
  color: #1890ff;
  border: 1rpx solid #91d5ff;
}

.status-indicator.ended {
  background-color: #f5f5f5;
  color: #8c8c8c;
  border: 1rpx solid #d9d9d9;
}

.course-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.course-info, .time-info, .location-info {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.course-label, .time-label, .location-label {
  color: #666;
  margin-right: 8rpx;
  min-width: 60rpx;
}

.course-value, .time-value, .location-value {
  color: #333;
  flex: 1;
}

.course-body {
  margin-bottom: 20rpx;
}

.course-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.course-stats {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 16rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-value {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #0052d9;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
}

.stat-divider {
  width: 2rpx;
  height: 40rpx;
  background-color: #e8e8e8;
  margin: 0 16rpx;
}

.course-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer-left {
  flex: 1;
}

.creator {
  font-size: 22rpx;
  color: #999;
}

.footer-right {
  margin-left: 16rpx;
}

.sign-btn {
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: 1rpx solid #d9d9d9;
  background-color: #ffffff;
  color: #666;
}

.sign-btn:active {
  opacity: 0.8;
}

/* 创建表单弹窗样式（复用活动考勤样式） */
.edit-form-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
  box-sizing: border-box;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.edit-form-modal {
  width: 90%;
  max-width: 560rpx;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  animation: fadeIn 0.3s ease-out;
  display: flex;
  flex-direction: column;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.edit-form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.edit-form-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.edit-form-content {
  flex: 1;
  padding: 24rpx;
  max-height: 60vh;
}

.form-item {
  margin-bottom: 24rpx;
  width: 100%;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-row {
  display: flex;
  gap: 12rpx;
  width: 100%;
  max-width: 400rpx;
}

.form-item.half {
  flex: 1;
  min-width: 0;
  max-width: 180rpx;
}

.form-item.half .form-input,
.form-item.half .form-display {
  max-width: none;
}

.form-label {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  max-width: 400rpx;
  height: 60rpx;
  padding: 0 12rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #0052d9;
}

.form-display {
  width: 100%;
  max-width: 400rpx;
  height: 60rpx;
  padding: 0 12rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f9f9f9;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.form-picker {
  width: 100%;
  max-width: 400rpx;
  height: 60rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.picker-display {
  flex: 1;
  padding: 0 12rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.form-textarea {
  width: 100%;
  max-width: 400rpx;
  min-height: 120rpx;
  max-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  resize: none;
}

.form-textarea:focus {
  border-color: #0052d9;
}

.edit-form-actions {
  display: flex;
  gap: 16rpx;
  padding-top: 24rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
  flex-shrink: 0;
  background-color: #fff;
}

.form-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.form-btn.cancel {
  background-color: #f5f5f5;
  color: #666;
}

.form-btn.cancel:active {
  background-color: #e8e8e8;
}

.form-btn.confirm {
  background-color: #0052d9;
  color: #fff;
}

.form-btn.confirm:active {
  background-color: #003d99;
}

.form-btn.confirm.loading {
  opacity: 0.7;
} 