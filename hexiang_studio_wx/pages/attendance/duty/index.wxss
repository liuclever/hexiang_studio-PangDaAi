/* pages/attendance/duty/index.wxss */
page {
  background-color: #f5f5f7;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 0 0 30rpx 0;
  width: 100%;
  box-sizing: border-box;
}

/* 页面头部样式 */
.page-header {
  background-color: #ffffff;
  padding: 30rpx 30rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  position: sticky;
  top: 0;
  z-index: 10;
  border-radius: 0 0 20rpx 20rpx;
}

/* 居中标题导航样式 */
.nav-section-centered {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  margin-bottom: 28rpx;
}

.page-title-centered {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a1a;
  letter-spacing: 0.5rpx;
  text-align: center;
}

/* 筛选区域 */
.filter-bar {
  margin: 10rpx 0 20rpx;
}

.filter-chips {
  display: flex;
  flex-wrap: nowrap;
  overflow-x: auto;
  scrollbar-width: none;
  -ms-overflow-style: none;
  padding-bottom: 10rpx;
}

.filter-chips::-webkit-scrollbar {
  display: none;
}

.chip {
  display: inline-flex;
  align-items: center;
  padding: 14rpx 32rpx;
  margin-right: 20rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  background-color: #f5f5f7;
  color: #666;
  white-space: nowrap;
  border: 2rpx solid transparent;
  font-weight: 500;
}

.chip:active {
  opacity: 0.7;
}

.chip.active {
  background-color: #0052d9;
  color: #ffffff;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 82, 217, 0.3);
}

/* 当前值班提醒 */
.current-duty-card {
  margin: 24rpx 16rpx 0;
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  color: #ffffff;
  box-shadow: 0 4rpx 20rpx rgba(82, 196, 26, 0.3);
}

.current-duty-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.duty-indicator {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.duty-indicator.ongoing {
  background-color: #ffffff;
  box-shadow: 0 0 8rpx rgba(255, 255, 255, 0.5);
}

.current-text {
  font-size: 24rpx;
  font-weight: 500;
  flex: 1;
}

.remaining-time {
  font-size: 22rpx;
  opacity: 0.9;
}

.current-duty-body {
  margin-bottom: 20rpx;
}

.duty-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.duty-time {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 4rpx;
}

.duty-location {
  font-size: 24rpx;
  opacity: 0.9;
}

.current-duty-footer {
  display: flex;
  justify-content: flex-end;
}

.quick-sign-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 24rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.quick-sign-btn:active {
  background-color: rgba(255, 255, 255, 0.3);
}

.signed-status {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  opacity: 0.9;
}

.signed-status text {
  margin-left: 8rpx;
}

/* 值班列表 */
.duty-list {
  margin: 24rpx 16rpx 0;
}

.empty-state {
  text-align: center;
  padding: 120rpx 0;
  color: #999;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 值班卡片 - 精简设计 */
.duty-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 12rpx;  /* 减少间距，更紧凑 */
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  transition: all 0.3s ease;
}

.duty-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.duty-card-content {
  padding: 24rpx;
}

.duty-header {
  margin-bottom: 20rpx;
}

.duty-title-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.duty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.status-indicator {
  padding: 4rpx 12rpx;  /* 更小的状态标签 */
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 500;
  white-space: nowrap;
}

.status-indicator.ongoing {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.status-indicator.upcoming {
  background-color: #e6f7ff;
  color: #1890ff;
  border: 1rpx solid #91d5ff;
}

.status-indicator.ended {
  background-color: #f5f5f5;
  color: #8c8c8c;
  border: 1rpx solid #d9d9d9;
}

.duty-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.time-info, .location-info {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.time-label, .location-label {
  color: #666;
  margin-right: 8rpx;
  min-width: 60rpx;
}

.time-value, .location-value {
  color: #333;
  flex: 1;
}

.duty-body {
  margin-bottom: 20rpx;
}

.duty-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.duty-stats {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 16rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-value {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #0052d9;
  margin-bottom: 4rpx;
}



.stat-label {
  font-size: 22rpx;
  color: #666;
}

.stat-divider {
  width: 2rpx;
  height: 40rpx;
  background-color: #e8e8e8;
  margin: 0 16rpx;
}

.duty-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer-left {
  flex: 1;
}

.creator {
  font-size: 22rpx;
  color: #999;
}

.footer-right {
  margin-left: 16rpx;
}

.sign-btn {
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: 1rpx solid #d9d9d9;
  background-color: #ffffff;
  color: #666;
}

.sign-btn:active {
  opacity: 0.8;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .duty-card-content {
    padding: 16rpx;
  }
  
  .duty-title {
    font-size: 28rpx;
  }
  
  .stat-value {
    font-size: 22rpx;
  }
  
  .stat-label {
    font-size: 18rpx;
  }
} 