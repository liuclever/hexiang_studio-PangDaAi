/* pages/attendance/leave-approval.wxss */
page {
  background-color: #f5f5f7;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 0 0 30rpx 0;
  width: 100%;
  box-sizing: border-box;
}

/* 页面头部 - 参考任务页面的简洁设计 */
.page-header {
  background-color: #ffffff;
  padding: 30rpx 30rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  position: sticky;
  top: 0;
  z-index: 10;
  border-radius: 0 0 20rpx 20rpx;
}

.nav-section {
  display: flex;
  align-items: center;
}

.nav-back {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  border-radius: 50%;
  background-color: #f5f5f7;
  transition: all 0.3s ease;
}

.nav-back:active {
  opacity: 0.7;
  transform: scale(0.95);
  background-color: #e8e8ea;
}

.title-area {
  flex: 1;
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a1a;
  letter-spacing: 0.5rpx;
}

.nav-right {
  width: 72rpx;
}

/* 居中标题导航样式 */
.nav-section-centered {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.page-title-centered {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a1a;
  letter-spacing: 0.5rpx;
  text-align: center;
}

/* 统计概览卡片 - 参考成员页面风格 */
.stats-container {
  margin: 24rpx 24rpx 0;
}

.stats-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
}

.stats-item {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 0 16rpx;
}

.stats-item:not(:last-child) {
  border-right: 2rpx solid #f0f0f0;
}

.stats-icon {
  width: 56rpx;
  height: 56rpx;
  background: #f8f9fa;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.stats-content {
  flex: 1;
  min-width: 0;
}

.stats-value {
  font-size: 42rpx;
  font-weight: 700;
  color: #1a1a1a;
  line-height: 1;
  text-align: center;
}

.stats-label {
  font-size: 26rpx;
  color: #666666;
  margin-top: 8rpx;
  font-weight: 500;
  text-align: center;
}

/* 筛选区域 - 参考任务页面风格 */
.filter-section {
  padding: 32rpx 24rpx 20rpx;
}

.filter-chips {
  display: flex;
  flex-wrap: nowrap;
  overflow-x: auto;
  scrollbar-width: none;
  -ms-overflow-style: none;
  padding-bottom: 10rpx;
}

.filter-chips::-webkit-scrollbar {
  display: none;
}

.chip {
  display: inline-flex;
  align-items: center;
  padding: 14rpx 32rpx;
  margin-right: 20rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  background-color: #f5f5f7;
  color: #666;
  white-space: nowrap;
  border: 2rpx solid transparent;
  font-weight: 500;
  transition: all 0.3s ease;
}

.chip:active {
  opacity: 0.7;
}

.chip.active {
  background-color: #0052d9;
  color: #ffffff;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 82, 217, 0.3);
}

/* 内容区域 */
.content-section {
  padding: 0 24rpx;
}

/* 审批卡片 - 参考任务页面的卡片设计 */
.approval-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  padding: 24rpx;
}

.approval-card:active {
  opacity: 0.95;
  transform: translateY(-2rpx);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

/* 任务信息 */
.task-info {
  flex: 1;
  margin-right: 20rpx;
}

.task-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.subtask-title {
  font-size: 28rpx;
  color: #666;
  line-height: 1.3;
}

/* 请假信息 */
.leave-info {
  flex: 1;
  margin-right: 20rpx;
}

.leave-type {
  display: inline-flex;
  align-items: center;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background-color: #0052d9;
  color: #ffffff;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.leave-duration {
  font-size: 28rpx;
  color: #666;
  line-height: 1.3;
}

/* 状态标签 - 参考任务页面的设计 */
.status-tag {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  white-space: nowrap;
  font-weight: 600;
  display: flex;
  align-items: center;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.status-pending {
  background-color: #f5f7fa;
  color: #646a73;
  border: 1rpx solid #e1e6eb;
}

.status-completed {
  background: linear-gradient(135deg, #00a870, #2e7d32);
  color: #ffffff;
}

.status-rejected {
  background: linear-gradient(135deg, #e34d59, #ff5252);
  color: #ffffff;
}

/* 卡片元信息 */
.card-meta {
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.user-detail {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.submit-time {
  font-size: 24rpx;
  color: #666;
  display: flex;
  align-items: center;
}

/* 卡片内容 */
.card-content {
  margin-bottom: 20rpx;
}

.content-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  font-weight: 600;
}

.content-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  background-color: #f8f9fa;
  padding: 16rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #0052d9;
}

/* 操作按钮 */
.card-actions {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.action-btn {
  min-width: 120rpx;
  height: 60rpx;
  font-size: 26rpx;
  font-weight: 600;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: translateY(1rpx);
}

/* 空状态 */
.empty-state {
  padding: 120rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-icon {
  margin-bottom: 32rpx;
  opacity: 0.3;
}

.empty-text {
  color: #888888;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
}

/* 详情弹窗 - 参考成员页面的弹窗设计 */
.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.detail-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4rpx);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  max-height: 88%;
  min-height: 70%;
  background-color: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
}

/* 弹窗头部 */
.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #ffffff;
  position: sticky;
  top: 0;
  z-index: 10;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: flex;
  align-items: center;
}

.close-btn {
  padding: 12rpx;
  border-radius: 50%;
  background-color: #f5f5f7;
  transition: all 0.3s ease;
}

.close-btn:active {
  opacity: 0.8;
  transform: scale(0.9);
}

/* 弹窗内容 */
.modal-body {
  padding: 24rpx 32rpx 0;
  height: calc(85vh - 140rpx);
  max-height: calc(100vh - 200rpx);
  box-sizing: border-box;
}

/* 详情卡片 */
.detail-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #f0f0f0;
}

.detail-section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.detail-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
  min-width: 120rpx;
  font-weight: 600;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  line-height: 1.4;
}

/* 提交者卡片 */
.submitter-card {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.submitter-info {
  flex: 1;
}

.submitter-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
}

/* 内容卡片 */
.content-card {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #0052d9;
}

/* 审批操作 */
.approval-actions {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 0;
}

.approval-btn {
  flex: 1;
  height: 80rpx;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.approval-btn:active {
  transform: translateY(1rpx);
}

/* 已处理状态 */
.processed-status {
  text-align: center;
  padding: 40rpx 20rpx;
}

.status-icon {
  margin-bottom: 20rpx;
}

.status-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.review-comment {
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  text-align: left;
}

.comment-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  font-weight: 600;
}

.comment-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 退回/驳回原因弹窗 */
.reject-popup {
  width: 600rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
}

.popup-header {
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  text-align: center;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.popup-body {
  padding: 24rpx 32rpx;
}

.form-section {
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 600;
}

.reason-textarea {
  width: 100%;
  min-height: 200rpx;
}

.popup-footer {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 32rpx 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.footer-btn {
  flex: 1;
  height: 72rpx;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 16rpx;
}

/* 防止触摸穿透 */
.detail-modal .modal-content {
  touch-action: pan-y;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .stats-card {
    padding: 24rpx 16rpx;
  }
  
  .stats-item {
    padding: 0 8rpx;
  }
  
  .approval-card {
    padding: 20rpx;
  }
  
  .card-actions {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .action-btn {
    width: 100%;
  }
}

