  transform: translateY(1rpx);
}

/* ==================== 已审批记录相关样式 ==================== */

/* 时间筛选区域 */
.time-filter-section {
  background-color: #fff;
  padding: 24rpx 32rpx;
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  white-space: nowrap;
}

.time-filter-chips {
  display: flex;
  gap: 16rpx;
  flex: 1;
}

.time-chip {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  background-color: #f5f7fa;
  color: #646a73;
  border: 1rpx solid #e1e6eb;
  cursor: pointer;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.time-chip.active {
  background: linear-gradient(135deg, #0052d9, #1976d2);
  color: #ffffff;
  border-color: #0052d9;
  box-shadow: 0 4rpx 12rpx rgba(0, 82, 217, 0.3);
}

.time-chip:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 已审批记录列表 */
.records-content {
  padding: 0 32rpx;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #f0f2f5;
  transition: all 0.3s ease;
}

.record-card:hover {
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  transform: translateY(-2rpx);
}

/* 记录头部 */
.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.record-type-badge {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.record-type-badge.task-type {
  background-color: #e3f2fd;
  color: #1976d2;
  border: 1rpx solid #bbdefb;
}

.record-type-badge.leave-type {
  background-color: #fff3e0;
  color: #f57c00;
  border: 1rpx solid #ffcc02;
}

.record-status {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.record-status.approved {
  background-color: #e8f5e8;
  color: #00a870;
  border: 1rpx solid #c8e6c9;
}

.record-status.rejected {
  background-color: #ffeaea;
  color: #e34d59;
  border: 1rpx solid #ffcdd2;
}

/* 记录内容 */
.record-content {
  margin-bottom: 16rpx;
}

.record-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.record-applicant {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.applicant-name {
  font-size: 26rpx;
  color: #666;
}

/* 记录时间 */
.record-time {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.time-label {
  font-size: 24rpx;
  color: #999;
}

.time-value {
  font-size: 24rpx;
  color: #666;
}

/* 审批意见 */
.record-comment {
  background-color: #f9fafb;
  border-radius: 12rpx;
  padding: 16rpx;
  border-left: 4rpx solid #0052d9;
}

.comment-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.comment-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 20rpx;
  gap: 16rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 文件附件样式 */
.file-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.file-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #eef0f2;
}

.file-info {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.file-icon {
  margin-right: 16rpx;
  flex-shrink: 0;
}

.file-type-icon {
  width: 40rpx;
  height: 40rpx;
}

.doc-icon {
  color: #2b579a;
}

.excel-icon {
  color: #217346;
}

.ppt-icon {
  color: #d24726;
}

.pdf-icon {
  color: #dc3e42;
}

.image-icon {
  color: #0052d9;
}

.text-icon {
  color: #666;
}

.zip-icon {
  color: #8a2be2;
}

.music-icon {
  color: #ff8c00;
}

.file-icon {
  color: #999;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
  flex: 1;
}

.file-actions {
  display: flex;
  gap: 16rpx;
}

.action-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8rpx;
  border-radius: 8rpx;
  min-width: 80rpx;
  background: none;
  border: none;
  line-height: normal;
  margin: 0;
  font-size: inherit;
}

.action-button::after {
  border: none;
}

.preview-button {
  background-color: rgba(0, 82, 217, 0.1);
}

.download-button {
  background-color: rgba(7, 193, 96, 0.1);
}

.action-icon {
  margin-bottom: 4rpx;
}

.action-text {
  font-size: 22rpx;
  line-height: 1;
}

.preview-icon {
  color: #0052d9;
}

.download-icon {
  color: #07c160;
}

/* 添加按钮交互效果 */
.action-button:active {
  opacity: 0.7 !important;
}