/* pages/attendance/records/index.wxss */
page {
  background-color: #f5f5f7;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 0 0 30rpx 0;
  width: 100%;
  box-sizing: border-box;
}

/* 顶部导航区域 */
.header {
  background-color: #ffffff;
  padding: 30rpx 30rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  position: sticky;
  top: 0;
  z-index: 10;
  border-radius: 0 0 20rpx 20rpx;
}

.title-area {
  margin-bottom: 28rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a1a;
  letter-spacing: 0.5rpx;
}

/* 筛选区域 */
.filter-bar {
  margin: 10rpx 0;
}

.filter-chips {
  display: flex;
  flex-wrap: nowrap;
  overflow-x: auto;
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE 10+ */
  padding-bottom: 10rpx;
}

.filter-chips::-webkit-scrollbar {
  display: none; /* Chrome, Safari, Edge */
}

.chip {
  display: inline-flex;
  align-items: center;
  padding: 14rpx 32rpx;
  margin-right: 20rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  background-color: #f5f5f7;
  color: #666;
  white-space: nowrap;
  border: 2rpx solid transparent;
  font-weight: 500;
}

.chip:active {
  opacity: 0.7;
}

.chip.active {
  background-color: #0052d9;
  color: #ffffff;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 82, 217, 0.3);
}

/* 统计卡片 */
.stats-section {
  margin: 24rpx 16rpx 10rpx;
  padding: 20rpx 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
}

.stats-card {
  display: flex;
  justify-content: space-between;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stats-number {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.stats-number.success {
  color: #4caf50;
}

.stats-number.warning {
  color: #ff9500;
}

.stats-number.danger {
  color: #ff6b6b;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

/* 记录列表 */
.record-list {
  padding: 20rpx 16rpx;
}

.record-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.record-card:active {
  opacity: 0.95;
}

.record-card-content {
  padding: 24rpx;
}

.record-header {
  margin-bottom: 20rpx;
}

.record-title-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.record-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1a1a1a;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
}

.status-indicator {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  white-space: nowrap;
  font-weight: 600;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.status-indicator.present {
  background: linear-gradient(135deg, #4caf50, #2e7d32);
  color: #ffffff;
}

.status-indicator.late {
  background: linear-gradient(135deg, #ff9800, #f57c00);
  color: #ffffff;
}

.status-indicator.absent {
  background: linear-gradient(135deg, #ff6b6b, #ff5252);
  color: #ffffff;
}

.status-indicator.leave {
  background: linear-gradient(135deg, #9c27b0, #7b1fa2);
  color: #ffffff;
}

.status-indicator.pending {
  background: linear-gradient(135deg, #9e9e9e, #757575);
  color: #ffffff;
}

.record-meta {
  display: flex;
  justify-content: space-between;
  color: #666666;
  font-size: 26rpx;
  margin-top: 8rpx;
}

.record-type {
  color: #555555;
  font-weight: 500;
}

.record-time {
  color: #888888;
}

.record-body {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.signin-info {
  margin-bottom: 16rpx;
}

.signin-row {
  display: flex;
  margin-bottom: 8rpx;
  font-size: 26rpx;
}

.signin-label {
  color: #666666;
  font-weight: 500;
  min-width: 120rpx;
}

.signin-value {
  color: #333333;
  flex: 1;
}

.record-remark {
  display: flex;
  font-size: 26rpx;
  line-height: 1.5;
}

.remark-label {
  color: #666666;
  font-weight: 500;
  min-width: 80rpx;
}

.remark-content {
  color: #555555;
  flex: 1;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
  opacity: 0.4;
}

.empty-text {
  color: #888888;
  font-size: 30rpx;
  font-weight: 500;
}

/* 加载状态 */
.loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  color: #666;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
}

.no-more {
  display: flex;
  justify-content: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}