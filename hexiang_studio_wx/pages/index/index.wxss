/* pages/index/index.wxss */
page {
  background-color: #f5f5f7;
}

.container {
  padding: 0 0 170rpx;
}

/* 顶部标题栏 */
.header {
  display: flex;
  flex-direction: column;
  position: relative;
  padding: 60rpx 30rpx 160rpx;
  background: linear-gradient(135deg, #4a90e2, #5ba2f5);
  margin: 0 0 -120rpx;
  color: #ffffff;
  border-radius: 0 0 30rpx 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 226, 0.25), 0 4rpx 8rpx rgba(74, 144, 226, 0.15);
  z-index: 1;
}

.header-title {
  font-size: 44rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  color: #ffffff;
  letter-spacing: 1rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 500;
  opacity: 0.9;
}

.header-icons {
  display: none;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  margin: 0 16rpx 20rpx;
  overflow: hidden;
  padding: 24rpx;
}

.card:active {
  opacity: 0.95;
}

.card-hover {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 数据概览卡片 */
.stats-card {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 32rpx 24rpx;
  margin: -120rpx 30rpx 0;
  position: relative;
  z-index: 10;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15), 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  position: relative;
  padding: 0 20rpx;
}

.stats-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.stats-value {
  font-size: 52rpx;
  font-weight: 700;
  color: #1a1a1a;
}

/* 移除原有的stats-icon样式，现在使用t-icon内联显示 */

.stats-divider {
  width: 2rpx;
  height: 80rpx;
  background-color: #e5e5e7;
}

/* 区块标题 */
.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin: 30rpx 16rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.more-text {
  font-size: 26rpx;
  color: #0052d9;
  font-weight: 500;
}

.more-text:active {
  opacity: 0.7;
}

/* 工作室概览 */
.overview-card {
  padding: 16rpx;
}

.overview-title {
  font-size: 28rpx;
  color: #555555;
  margin-bottom: 20rpx;
  border-left: 4rpx solid #0052d9;
  padding-left: 16rpx;
  font-weight: 600;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.chart-period-title {
  font-size: 22rpx;
  color: #888;
  font-weight: 400;
}

.chart-area {
  height: 300rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.chart-canvas {
  width: 100%;
  height: 260rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  border: 1rpx solid #f0f0f0;
}

/* 管理员统计 */
.admin-stats {
  display: flex;
  justify-content: space-around;
  padding: 16rpx 0;
}

.admin-stat-item {
  text-align: center;
}

.admin-stat-item:active {
  opacity: 0.7;
}

.stat-number {
  font-size: 40rpx;
  font-weight: 700;
  color: #0052d9;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #666666;
  font-weight: 500;
}

/* 学生进度条 */
.student-progress {
  padding: 8rpx;
}

.empty-progress {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-progress image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 24rpx;
  opacity: 0.25;
}

.empty-progress text {
  font-size: 28rpx;
  color: #888888;
  font-weight: 500;
}

.progress-item {
  margin-bottom: 20rpx;
  padding: 12rpx;
  border-radius: 12rpx;
}

.progress-item:active {
  background-color: #f8f9fa;
}

.progress-item:last-child {
  margin-bottom: 0;
}

.progress-course {
  font-size: 28rpx;
  color: #1a1a1a;
  margin-bottom: 12rpx;
  font-weight: 600;
}

.progress-bar-bg {
  height: 12rpx;
  background-color: #e8e8e8;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
  box-shadow: inset 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #4caf50, #2e7d32);
  border-radius: 6rpx;
  min-width: 12rpx;
  box-shadow: 0 1rpx 3rpx rgba(76, 175, 80, 0.3);
  position: relative;
}

.progress-bar::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  border-radius: 6rpx;
}

.progress-text {
  font-size: 26rpx;
  color: #666666;
  text-align: right;
  display: flex;
  justify-content: space-between;
  font-weight: 500;
}

.progress-status {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.progress-status.urgent {
  background: linear-gradient(135deg, #ff6b6b, #ff5252);
  color: #ffffff;
}

.progress-status.completed {
  background: linear-gradient(135deg, #4caf50, #2e7d32);
  color: #ffffff;
}

/* 任务提示样式 */
.task-reminder {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  background: linear-gradient(135deg, #fff3e0, #fff8e1);
  padding: 16rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #ff9500;
  box-shadow: 0 2rpx 8rpx rgba(255, 149, 0, 0.15);
}

.reminder-icon {
  width: 40rpx;
  height: 40rpx;
  background-color: #ff9500;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  margin-right: 16rpx;
  font-size: 24rpx;
  box-shadow: 0 2rpx 4rpx rgba(255, 149, 0, 0.3);
}

.reminder-text {
  font-size: 26rpx;
  color: #b8860b;
  font-weight: 500;
}

.reminder-text .highlight {
  color: #d4840a;
  font-weight: bold;
}

/* 模块网格 */
.modules-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-gap: 20rpx 16rpx;
  padding: 16rpx;
}

.module-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 8rpx;
  border-radius: 12rpx;
}

.module-item:active {
  background-color: #f8f9fa;
  opacity: 0.8;
}

.module-icon {
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.module-name {
  font-size: 26rpx;
  color: #555555;
  font-weight: 500;
}


/* 审批管理相关样式 */
.module-icon-wrapper {
  position: relative;
  display: inline-block;
}

.approval-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: linear-gradient(135deg, #ff6b6b, #ff5252);
  color: #fff;
  border-radius: 50%;
  min-width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 22rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.4);
  z-index: 10;
}

/* 管理员统计区域样式增强 */
.approval-stat-item {
  border-radius: 12rpx;
}

.approval-stat-item:active {
  background-color: rgba(0, 82, 217, 0.08);
  opacity: 0.9;
}

.stat-number.pending {
  color: #ff5252;
  font-weight: 700;
}

.stat-detail {
  font-size: 22rpx;
  color: #888888;
  margin-top: 8rpx;
  line-height: 1.4;
  font-weight: 500;
}