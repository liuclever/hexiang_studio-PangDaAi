/* 任务详情页样式 */
.container {
  min-height: 100vh;
  background-color: #f5f5f7;
  padding-bottom: 110rpx;
  box-sizing: border-box;
  padding-top: 92rpx; /* 为固定导航栏留出空间 */
}

/* 自定义导航栏 */
.custom-navbar {
  z-index: 100;
  width: 100%;
  color: #333;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.03);
}

.navbar-back-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 16rpx;
  height: 100%;
}

/* 任务状态相关样式 */
.overdue-text {
  color: #ff4757 !important;
  font-weight: 500;
}

.warning-text {
  color: #ffa502 !important;
  font-weight: 500;
}

.completed-text {
  color: #2ed573 !important;
  font-weight: 500;
}

/* 内容滚动区域 */
.detail-scroll {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  padding: 16rpx;
}

/* 卡片通用样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

/* 任务卡片样式 */
.task-main-card {
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.section-card {
  margin-bottom: 20rpx;
  padding: 0rpx;
}

.task-header {
  margin-bottom: 24rpx;
}

.task-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  word-break: break-all;
}

.task-creator {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

/* 信息网格 */
.info-grid {
  display: flex;
  justify-content: space-between;
  margin: 24rpx 0;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item {
  flex: 1;
  text-align: center;
}

.info-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 任务描述 */
.task-description {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.6;
}

.section-content {
  padding: 0rpx 24rpx 20rpx 24rpx;
}

/* 子任务样式 */
.subtasks-list {
  margin-top: 6rpx;
}

/* 子任务状态标签 */
.subtask-status {
