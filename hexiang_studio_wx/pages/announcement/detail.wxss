/* 公告详情页面样式 */
.detail-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 20rpx);
}

/* 详情区块 */
.detail-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 标题区块（合并头部信息） */
.title-section {
  padding-top: 30rpx;
}

.title-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.type-tag {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: #fff;
  font-weight: bold;
}

.type-tag.type-0 {
  background-color: #1890FF; /* 通知 - 蓝色 */
}

.type-tag.type-1 {
  background-color: #52C41A; /* 活动 - 绿色 */
}

.type-tag.type-2 {
  background-color: #FA8C16; /* 新闻 - 橙色 */
}

.type-tag.type-3 {
  background-color: #8C8C8C; /* 其他 - 灰色 */
}

.publish-info {
  text-align: right;
  font-size: 24rpx;
  color: #666;
}

.publisher {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-bottom: 8rpx;
}

.publisher text {
  margin-left: 6rpx;
}

.publish-time {
  font-size: 22rpx;
  color: #999;
}

/* 区块标签 */
.section-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-label text {
  margin-left: 8rpx;
}

/* 标题 */
.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  word-break: break-all;
}

/* 内容 */
.detail-content {
  margin-top: 0;
}

.content-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  word-break: break-all;
  white-space: pre-wrap;
}

/* 图片展示 */
.images-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200rpx, 1fr));
  gap: 20rpx;
}

.image-item {
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #f5f5f5;
  position: relative;
  cursor: pointer;
}

.image-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.image-item:active {
  transform: scale(0.95);
}

.image-item:active .image-overlay {
  opacity: 1;
}

/* 附件下载 */
.attachments-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.attachment-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.attachment-item:active {
  background-color: #e9ecef;
  transform: translateY(1rpx);
}

.attachment-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.attachment-icon {
  margin-right: 16rpx;
  color: #666;
}

.attachment-details {
  flex: 1;
}

.attachment-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 4rpx;
  word-break: break-all;
}

.attachment-size {
  font-size: 22rpx;
  color: #999;
}

.attachment-actions {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.action-btn text {
  margin-left: 4rpx;
}

.preview-btn {
  background-color: rgba(82, 196, 26, 0.1);
  color: #52C41A;
  border: 1rpx solid rgba(82, 196, 26, 0.3);
}

.preview-btn:active {
  background-color: rgba(82, 196, 26, 0.2);
}

.download-btn {
  background-color: rgba(24, 144, 255, 0.1);
  color: #1890FF;
  border: 1rpx solid rgba(24, 144, 255, 0.3);
}

.download-btn:active {
  background-color: rgba(24, 144, 255, 0.2);
}

/* 底部信息 */
.detail-footer {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.footer-info {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
}

.footer-info text {
  margin-left: 6rpx;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  text-align: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1890FF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式设计 */
@media (max-width: 350px) {
  .detail-container {
    padding: 16rpx;
  }
  
  .detail-title {
    font-size: 28rpx;
  }
  
  .content-text {
    font-size: 28rpx;
  }
  
  .images-grid {
    grid-template-columns: repeat(auto-fill, minmax(160rpx, 1fr));
    gap: 16rpx;
  }
}