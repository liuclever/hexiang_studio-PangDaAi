/* pages/message/index.wxss */

/* 状态控制组件 */
.status-toggle-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.status-display {
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.status-display.published {
  background-color: rgba(82, 196, 26, 0.1);
  color: #52C41A;
  border: 1rpx solid rgba(82, 196, 26, 0.2);
}

.status-display.draft {
  background-color: rgba(140, 140, 140, 0.1);
  color: #8C8C8C;
  border: 1rpx solid rgba(140, 140, 140, 0.2);
}

/* 开关样式 */
.status-switch {
  padding: 8rpx;
  cursor: pointer;
}

.switch-bg {
  width: 60rpx;
  height: 32rpx;
  border-radius: 16rpx;
  position: relative;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
}

.switch-bg.off {
  background-color: #E8E8E8;
}

.switch-bg.on {
  background-color: #52C41A;
}

.switch-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #fff;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
  position: absolute;
}

.switch-bg.off .switch-dot {
  left: 4rpx;
}

.switch-bg.on .switch-dot {
  left: 32rpx;
}

.status-switch:active .switch-bg {
  transform: scale(0.95);
}
/* 公告页面样式 */
.announcement-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 搜索区域 */
.search-section {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-bar {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.search-input-container {
  flex: 1;
}

/* 轻量级的t-input样式调整 */
.search-input-container .t-input {
  height: 10rpx;
  border-radius: 18rpx;
  background-color: #f8f9fa;
  border: 1rpx solid #e9ecef;
  font-size: 18rpx;
}

.search-btn {
  width: 56rpx;
  height: 56rpx;
  background-color: #1890FF;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.3);
  transition: all 0.3s ease;
}

.search-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(24, 144, 255, 0.4);
}

/* 筛选标签 */
.filter-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.filter-tag {
  padding: 12rpx 24rpx;
  background-color: #f0f0f0;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.filter-tag.active {
  background-color: #1890FF;
  color: #fff;
}

/* 公告列表 */
.announcement-list {
  padding: 0 20rpx;
}

.announcement-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.announcement-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.12);
}

/* 公告项头部 */
.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.type-tag {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: #fff;
  font-weight: bold;
}

.type-tag.type-0 {
  background-color: #1890FF; /* 通知 - 蓝色 */
}

.type-tag.type-1 {
  background-color: #52C41A; /* 活动 - 绿色 */
}

.type-tag.type-2 {
  background-color: #FA8C16; /* 新闻 - 橙色 */
}

.type-tag.type-3 {
  background-color: #8C8C8C; /* 其他 - 灰色 */
}

.publish-date {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #999;
}

.publish-date text {
  margin-left: 4rpx;
}

/* 公告标题 */
.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.4;
  word-break: break-all;
}

/* 公告内容预览 */
.item-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
  word-break: break-all;
}

/* 图片预览 */
.item-images {
  margin-bottom: 20rpx;
}

.images-preview {
  display: flex;
  gap: 12rpx;
  flex-wrap: nowrap;
}

.preview-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #f5f5f5;
  position: relative;
  flex-shrink: 0;
}

.preview-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.preview-image:active .preview-img {
  transform: scale(0.95);
}

.more-images {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.more-images text {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

/* 公告项底部 */
.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.publisher {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.publisher text {
  margin-left: 6rpx;
}

.item-stats {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #999;
}

.stat-item text {
  margin-left: 4rpx;
}

.status {
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: bold;
}

.status.published {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.status.draft {
  background-color: #fafafa;
  color: #8c8c8c;
  border: 1rpx solid #d9d9d9;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #ccc;
}

.empty-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  padding: 40rpx 20rpx;
  text-align: center;
}

.load-more-btn {
  padding: 20rpx 40rpx;
  background-color: #fff;
  border-radius: 40rpx;
  color: #1890FF;
  font-size: 26rpx;
  border: 2rpx solid #1890FF;
  display: inline-block;
  transition: all 0.3s ease;
}

.load-more-btn.disabled {
  color: #ccc;
  border-color: #ccc;
  background-color: #f5f5f5;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  text-align: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1890FF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式设计 */
@media (max-width: 350px) {
  .announcement-item {
    padding: 24rpx;
  }
  
  .item-title {
    font-size: 30rpx;
  }
  
  .item-content {
    font-size: 26rpx;
  }
  
  .preview-image,
  .more-images {
    width: 100rpx;
    height: 100rpx;
  }
}