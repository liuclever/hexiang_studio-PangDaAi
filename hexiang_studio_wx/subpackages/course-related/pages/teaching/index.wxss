/* pages/course/teaching/index.wxss */
page {
  background-color: #f5f5f7;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 24rpx 24rpx 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  background-color: #ffffff;
  padding: 30rpx 30rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  border-radius: 0 0 20rpx 20rpx;
  margin-bottom: 24rpx;
}

.header-content {
  display: flex;
  align-items: center;
}

.header-icon {
  width: 64rpx;
  height: 64rpx;
  background-color: #e6f7ff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  border: 2rpx solid #b3e5fc;
}

.header-text {
  flex: 1;
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 4rpx;
  letter-spacing: 0.5rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* 选项卡 */
.tab-container {
  display: flex;
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  position: relative;
  transition: all 0.3s ease;
}

.tab:active {
  background-color: #f8f9fa;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  transition: color 0.3s ease;
}

.tab-active .tab-text {
  color: #0052d9;
  font-weight: 600;
}

.tab-line {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #0052d9;
  border-radius: 2rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #0052d9;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-container text {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-image {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
  font-weight: 500;
}

/* 课程列表 */
.course-list {
  padding: 0 0 30rpx;
}

/* 课程卡片 */
.course-card {
  display: flex;
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  overflow: hidden;
  transition: all 0.3s ease;
  padding: 20rpx;
}

.course-card:active {
  opacity: 0.95;
  transform: translateY(2rpx);
}

/* 课程封面 */
.course-cover {
  width: 160rpx;
  height: 160rpx;
  object-fit: cover;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  background-color: #f8f9fa;
  border: 1rpx solid #f0f0f0;
}

/* 课程内容 */
.course-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

/* 课程标题和状态标签 */
.course-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.course-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  flex: 1;
  margin-right: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
}

.course-badge {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  white-space: nowrap;
  font-weight: 600;
  flex-shrink: 0;
}

.badge-primary {
  background-color: #e8f4fd;
  color: #0052d9;
}

.badge-success {
  background-color: #e6f7ff;
  color: #00a870;
}

/* 课程信息项 */
.course-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.info-row {
  display: flex;
  gap: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  flex: 1;
  min-width: 0;
}

.info-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 8rpx;
  white-space: nowrap;
  font-weight: 500;
}

.info-text {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #666;
  font-weight: 500;
}
