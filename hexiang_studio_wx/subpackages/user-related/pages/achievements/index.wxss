/* pages/user/achievements/index.wxss */
page {
  background-color: #f5f5f7;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 24rpx 24rpx 30rpx;
}

.page-header {
  background-color: #ffffff;
  padding: 30rpx 30rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  border-radius: 0 0 20rpx 20rpx;
  margin-bottom: 24rpx;
}

.header-content {
  display: flex;
  align-items: center;
}

.header-icon {
  width: 64rpx;
  height: 64rpx;
  background-color: #fff3e0;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  border: 2rpx solid #ffe0b2;
}

.header-text {
  flex: 1;
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 4rpx;
  letter-spacing: 0.5rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #0052d9;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 内容区域 */
.content-container {
  padding-bottom: 30rpx;
}

/* 部分标题 */
.section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0 16rpx;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background-color: #0052d9;
  border-radius: 3rpx;
}

.section-count {
  font-size: 26rpx;
  color: #666;
  background-color: #e8f4fd;
  color: #0052d9;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-image {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
  font-weight: 500;
}

/* 卡片列表 */
.card-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.card-item {
  display: flex;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08), 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.card-item:active {
  opacity: 0.95;
  transform: translateY(2rpx);
}

.card-image {
  width: 100rpx;
  height: 130rpx;
  border-radius: 12rpx;
  background-color: #f8f9fa;
  margin-right: 20rpx;
  flex-shrink: 0;
  object-fit: cover;
  border: 1rpx solid #f0f0f0;
}

.card-content {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 12rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
}

.card-subtitle {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  align-items: center;
}

.card-issuer {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.card-date {
  font-size: 24rpx;
  color: #999;
}

.card-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.card-tag {
  background-color: #e8f4fd;
  color: #0052d9;
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.card-arrow {
  display: flex;
  align-items: center;
  color: #ddd;
  font-size: 32rpx;
  transition: all 0.3s ease;
  margin-left: 16rpx;
}

.card-item:active .card-arrow {
  color: #0052d9;
  transform: translateX(4rpx);
}

/* 详情弹窗 */
.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.detail-modal.show {
  opacity: 1;
  visibility: visible;
  pointer-events: auto;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4rpx);
  transition: opacity 0.3s ease;
}

.modal-content {
  position: relative;
  width: 650rpx;
  max-height: 85vh;
  background-color: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  z-index: 1000;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #ffffff;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.close-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  color: #999;
  line-height: 1;
  transition: all 0.3s ease;
  border-radius: 50%;
  background-color: #f5f5f7;
}

.close-btn:active {
  background-color: #e9ecef;
  color: #666;
  transform: scale(0.9);
}

/* 详情容器 - 支持滚动 */
.detail-container {
  flex: 1;
  padding: 0;
  overflow-y: auto;
  max-height: calc(85vh - 120rpx); /* 减去header高度 */
}

.detail-image-container {
  padding: 32rpx 32rpx 24rpx;
  text-align: center;
}

.detail-image {
  width: 100%;
  display: block;
  border-radius: 16rpx;
}

.preview-tip {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 12rpx 0;
  text-align: center;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 500;
}

.detail-info-list {
  padding: 0 32rpx 32rpx;
}

.detail-info-item {
  display: flex;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.detail-info-item:last-child {
  margin-bottom: 0;
}

.detail-info-item:active {
  background-color: #f0f1f2;
}

.info-label {
  width: 140rpx;
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  font-size: 26rpx;
  color: #1a1a1a;
  font-weight: 600;
}

.info-value.link {
  color: #0052d9;
  text-decoration: underline;
}
