<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.back_hexiang_studio.mapper.TaskSubmissionAttachmentMapper">

    <!-- 结果映射 -->
    <resultMap id="taskSubmissionAttachmentResultMap" type="com.back_hexiang_studio.entity.TaskSubmissionAttachment">
        <id column="id" property="id"/>
        <result column="submission_id" property="submissionId"/>
        <result column="file_name" property="fileName"/>
        <result column="file_path" property="filePath"/>
        <result column="file_size" property="fileSize"/>
        <result column="file_type" property="fileType"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <!-- 根据提交ID查询附件列表 -->
    <select id="findBySubmissionId" resultMap="taskSubmissionAttachmentResultMap">
        SELECT id, submission_id, file_name, file_path, file_size, file_type, create_time
        FROM task_submission_attachment
        WHERE submission_id = #{submissionId}
        ORDER BY create_time ASC
    </select>

    <!-- 插入附件记录 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO task_submission_attachment (submission_id, file_name, file_path, file_size, file_type, create_time)
        VALUES (#{submissionId}, #{fileName}, #{filePath}, #{fileSize}, #{fileType}, #{createTime})
    </insert>

    <!-- 根据提交ID删除附件 -->
    <delete id="deleteBySubmissionId">
        DELETE FROM task_submission_attachment
        WHERE submission_id = #{submissionId}
    </delete>

</mapper> 